<turbo-frame id="new-habit">
  <%= form_with(model: habit, data: { turbo_frame: "_top" }, class: "contents") do |form| %>
    <% if habit.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(habit.errors.count, "error") %> prohibited this habit from being saved:</h2>

        <ul>
          <% habit.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex gap-3 my-5 items-baseline">
        <%= form.label :name %>
        <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
        <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</turbo-frame>
